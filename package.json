{
  "type": "module",
  "scripts": {
    "build": "echo '🏗️ Building with tsup...' && tsup src/server.ts --format esm --out-dir dist",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/' --exec ts-node-esm src/server.ts",
    "lint": "eslint 'src/**/*'"
  },
  "dependencies": {
    "@vercel/node": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mongodb": "^6.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.28",
    "eslint": "^9.27.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
